{
    "compilerOptions": {
      "target": "ES2020",                 // Modern JS output
      "module": "commonjs",               // Node.js module system
      "strict": true,                     // Strict type checking
      "esModuleInterop": true,            // Allow import/export interop
      "experimentalDecorators": true,     // Enable decorators (TS4)
      "emitDecoratorMetadata": true,      // Optional: metadata for decorators
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"                  // Compiled JS output
    },
    "include": ["./src/**/*"]            // Source folder
  }