{
    "compilerOptions": {
      "target": "ES2020",                
      "module": "commonjs",
      "strict": true,                     // Strict type checking
      "esModuleInterop": true,
      "experimentalDecorators": true,     // Enable TS4 decorators
      "emitDecoratorMetadata": true,      // Optional: metadata for decorators
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"               
    },
    "include": ["./src/**/*"]         
}